{
	"type": "origins:multiple",
	"callback":
	{
		"type": "origins:action_on_callback",
		"entity_action_chosen":
		{
			"type": "origins:execute_command",
			"command": "team add mob_friends"
		},
		"entity_action_added":
		{
			"type": "origins:delay",
			"ticks": 1,
			"action":
			{
				"type": "origins:execute_command",
				"command": "team join mob_friends @s"
			}
		},
		"entity_action_lost":
		{
			"type": "origins:execute_command",
			"command": "team leave @s"
		}
	},
	"join_team":
	{
		"type": "origins:action_over_time",
		"interval": 20,
		"entity_action":
		{
			"type": "origins:execute_command",
			"command": "team join mob_friends @e[type=!player,nbt={HurtByTimestamp:0}]"
		}
	},
	"leave_team":
	{
		"type": "origins:target_action_on_hit",
		"entity_action":
		{
			"type": "origins:and",
			"actions":
			[
				{
					"type": "origins:execute_command",
					"command": "team leave @s[type=!player]"
				},
				{
					"type": "origins:delay",
					"ticks": 1800,
					"action":
					{
						"type": "origins:execute_command",
						"command": "team join mob_friends"
					}
				}
			]
		},
		"cooldown": 0,
		"hud_render": { "should_render": false }
	},
	"name": "Friend of Mobs",
	"description": "Mobs will allow you to to get up close as long as you don't hurt them."
}
